<h1>Editing <%=@devices.device_name %> </h1>
<%= link_to "Back to Devices",devices_path %>
<%= form_for @devices do |f| %>

<br><b><%="Name of Device:  "%></b><%=f.text_field :device_name %>

<br><b><%="Model of Device: "%></b><%=f.text_field :device_model %>

<br><b><%="manufacturer of Device: "%></b><%=f.text_field :device_manufacturer %>

<br><b><%="Type of Device: "%></b><%=f.select(:device_type,[['Phone'],['Tablet'],['Laptop'],['Other']], include_blank: true) %>

<b><br><%="Price of original device: "%></b><%=f.text_field :device_cost, size: 10 %><br>
<br><br><b><%="Start Date: "%></b><%=f.text_field :start_date,"data-provide"=>'datepicker'%>


<br><b><%="Expiry Date: "%></b><%=f.text_field :expiry_date,"data-provide"=>'datepicker'%>

<br><%=f.submit "Change" %>


<%= link_to('Delete this record', @devices,
             { :confirm => 'Are you sure?', :method => :delete }) %>
<% end %>
